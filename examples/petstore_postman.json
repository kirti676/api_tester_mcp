{
  "info": {
    "name": "Pet Store API Collection",
    "description": "A Postman collection for testing the Pet Store API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://petstore.swagger.io/v2",
      "type": "string"
    },
    {
      "key": "apiKey",
      "value": "your-api-key-here",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{bearerToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Pets",
      "item": [
        {
          "name": "Get all pets",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/pets?limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["pets"],
              "query": [
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Number of pets to return"
                }
              ]
            },
            "description": "Retrieve a list of all pets with optional limit parameter"
          },
          "response": []
        },
        {
          "name": "Create a new pet",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Fluffy\",\n  \"tag\": \"cat\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/pets",
              "host": ["{{baseUrl}}"],
              "path": ["pets"]
            },
            "description": "Create a new pet with name and optional tag",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{bearerToken}}",
                  "type": "string"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get pet by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/pets/{{petId}}",
              "host": ["{{baseUrl}}"],
              "path": ["pets", "{{petId}}"],
              "variable": [
                {
                  "key": "petId",
                  "value": "1",
                  "description": "ID of the pet to retrieve"
                }
              ]
            },
            "description": "Retrieve a specific pet by its ID"
          },
          "response": []
        },
        {
          "name": "Update pet",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Fluffy\",\n  \"tag\": \"updated-cat\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/pets/{{petId}}",
              "host": ["{{baseUrl}}"],
              "path": ["pets", "{{petId}}"],
              "variable": [
                {
                  "key": "petId",
                  "value": "1",
                  "description": "ID of the pet to update"
                }
              ]
            },
            "description": "Update an existing pet's information",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{bearerToken}}",
                  "type": "string"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete pet",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/pets/{{petId}}",
              "host": ["{{baseUrl}}"],
              "path": ["pets", "{{petId}}"],
              "variable": [
                {
                  "key": "petId",
                  "value": "1",
                  "description": "ID of the pet to delete"
                }
              ]
            },
            "description": "Delete a pet by its ID",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{bearerToken}}",
                  "type": "string"
                }
              ]
            }
          },
          "response": []
        }
      ],
      "description": "Pet management operations"
    },
    {
      "name": "Authentication Tests",
      "item": [
        {
          "name": "Test without authentication",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Unauthorized Pet\",\n  \"tag\": \"test\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/pets",
              "host": ["{{baseUrl}}"],
              "path": ["pets"]
            },
            "description": "Test creating a pet without authentication - should fail with 401"
          },
          "response": []
        }
      ],
      "description": "Authentication related test cases"
    }
  ]
}
